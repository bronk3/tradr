@using Tradr.Models
@model Item
@{
    Layout = null;
}

<div class="item-box"><a href="@Url.Action("ItemDetails", "Item", new{id = @Model.ItemId})">
                          <div class="item-image" style="background-image: url('@Url.Content("~/Content/images/items/" + Model.Images.First().ItemImage)')"></div>
                          <div class="item-title"><span>@Model.Title</span></div>
                          <div class="item-value"><span>$ @Model.Value</span></div></a>
    <a href="@Url.Action("MakeAnOffer", "Offer", new { id = Model.ItemId})"><button class="btn btn-primary">Make An Offer</button></a>
    <a href="@Url.Action("Message", "User", new { id = Model.UserId, item=Model.ItemId})"><button class="btn btn-info">Message User</button></a>
                    
</div>