<script>
    $(function () {
        $(".reciever-items").find("input[type='checkbox']").on("click", function () {
            var names = $(".reciever-items").find("input:checked").map(function () { return $(this).attr("name"); }).get();
            var value = $(".reciever-items").find("input:checked").map(function () { return $(this).data("cost"); }).get();
            $("#total-value span").html("$ " + eval(value.join('+')));
            $("#total-items span").html(names.join(seperator = ", "));
        });
        $(".proposer-items").find("input[type='checkbox']").on("click", function () {
            var ids = $(".proposer-items input:checked").map(function () { return $(this).val(); }).get();
            $(".desired-item").hide();
            for (var i = 0; i < ids.length; i++) {
                var div = $("#desiredId_" + ids[i]);
                div.css("display", "inline-block");
            }
        });
        $("#submit").click(function () {
            $("#desiredItems").val($(".reciever-items input:checked").map(function () { return $(this).val(); }).get().join());
            $("#items").val($(".proposer-items input:checked").map(function () { return $(this).val(); }).get().join());
            $("#message").val($("#message-box").html());
        });
        $(".proposed-image").click(function () {
            var image = $(this);
            if (image.next().css("display") == "none") {
                image.next().slideDown("slow").css("display", "inline-block");
                image.parent().css("display", "block");
                image.parent().parent().prepend(image.parent());
            } else {
                image.next().css("display", "none");
                image.parent().css("display", "inline");
                image.parent().parent().append(image.parent());
            }
        });

        $("#negotiate-option").click(function () {
            $("#view-offer").slideUp();
            $("#negotiate").slideDown();
        });
    });
</script>